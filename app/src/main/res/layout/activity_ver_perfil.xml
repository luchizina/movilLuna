<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/f1"
    tools:context=".verPerfil">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        tools:ignore="MissingConstraints"></androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="62dp"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/no_disp"
            android:layout_centerInParent="true"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="2dp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TableLayout
            android:layout_width="316dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="16dp"
            android:stretchColumns="1"
            android:textColor="@android:color/white">

            <TableRow android:background="#DDB53D">

                <TextView
                    android:layout_column="0"
                    android:padding="4dip"
                    android:text="Nick:"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/txtNick"
                    android:layout_column="1"
                    android:padding="3dip"
                    android:text="Nick"
                    android:textColor="@android:color/white" />
            </TableRow>

            <View
                android:layout_height="2dip"
                android:background="#FF909090" />

            <TableRow>

                <TextView
                    android:layout_column="0"
                    android:padding="3dip"
                    android:text="Nombre"
                    android:textColor="@color/md_white_1000"
                    android:textColorHighlight="@color/md_white_1000"
                    android:textColorHint="@color/md_white_1000" />

                <TextView
                    android:id="@+id/txtNombre"
                    android:layout_column="1"
                    android:gravity="left"
                    android:padding="3dip"
                    android:text="Nombre"
                    android:textColor="@color/md_white_1000"
                    android:textColorHighlight="@color/md_white_1000"
                    android:textColorHint="@color/md_white_1000" />

            </TableRow>

            <View
                android:layout_height="2dip"
                android:background="#FF909090" />

            <TableRow>

                <TextView
                    android:layout_column="0"
                    android:padding="3dip"
                    android:text="Apellido:"
                    android:textColor="@color/md_white_1000"
                    android:textColorHighlight="@color/md_white_1000"
                    android:textColorHint="@color/md_white_1000" />

                <TextView
                    android:id="@+id/txtApellido"
                    android:layout_column="1"
                    android:gravity="left"
                    android:padding="3dip"
                    android:text="Apellido"
                    android:textColor="@color/md_white_1000"
                    android:textColorHighlight="@color/md_white_1000"
                    android:textColorHint="@color/md_white_1000" />
            </TableRow>

            <View
                android:layout_height="2dip"
                android:background="#FF909090" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"

                    android:padding="3dip"
                    android:text="Correo electrÃ³nico:"
                    android:textColor="@color/md_white_1000"
                    android:textColorHighlight="@color/md_white_1000"
                    android:textColorHint="@color/md_white_1000" />

                <TextView
                    android:id="@+id/txtCorreo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:gravity="left"
                    android:padding="3dip"
                    android:text="gmail.com"
                    android:textColor="@color/md_white_1000"
                    android:textColorHighlight="@color/md_white_1000"
                    android:textColorHint="@color/md_white_1000" />
            </TableRow>

            <View
                android:layout_height="2dip"
                android:background="#FF909090" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:padding="3dip"
                    android:text="Contacto:"
                    android:textColor="@color/md_white_1000"
                    android:textColorHighlight="@color/md_white_1000"
                    android:textColorHint="@color/md_white_1000" />

                <TextView
                    android:id="@+id/txtCelu"
                    android:layout_width="108dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:gravity="left"
                    android:padding="3dip"
                    android:text="096666661"
                    android:textColor="@color/md_white_1000"
                    android:textColorHighlight="@color/md_white_1000"
                    android:textColorHint="@color/md_white_1000" />
            </TableRow>

            <View
                android:layout_height="10dip"
                android:background="#FF909090" />
        </TableLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>